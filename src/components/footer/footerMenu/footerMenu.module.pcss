.menu {
}

.title {
    font-size: 18px;
    margin-bottom: 15px;
}

.list {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    list-style: none;
    padding: 0;

    @media (max-width: 520px) {
        grid-template-columns: repeat(2, 1fr);
    }
}

.item {
    margin-bottom: 7px;
}

.link {
    color: #202020;
    text-decoration: none;
    &:hover {
        color: #d13434;
    }
}