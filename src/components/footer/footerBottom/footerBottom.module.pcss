.container {
    padding: 12px 15px;
    display: flex;
    justify-content: space-between;
    font-size: 14px;
    line-height: 150%;
    font-weight: 300;
    max-width: 1200px;
    margin: 0 auto;

    @media (max-width: 640px) {
        font-size: 12px;
        line-height: 150%;
        flex-direction: column-reverse;
        align-items: center;
    }
}

